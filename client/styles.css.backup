/* Import design tokens */
@import "tokens.css";

/* Reset and base styles */
:root {
  /* Gray scale */
  --color-gray-50: #fafafa;
  --color-gray-100: #f5f5f5;
  --color-gray-200: #e5e7eb;
  --color-gray-300: #d1d5db;
  --color-gray-400: #9ca3af;
  --color-gray-500: #6b7280;
  --color-gray-600: #4b5563;
  --color-gray-700: #374151;
  --color-gray-800: #1f2937;
  --color-gray-900: #111827;

  /* Blue scale */
  --color-blue-50: #eff6ff;
  --color-blue-100: #dbeafe;
  --color-blue-200: #bfdbfe;
  --color-blue-300: #93c5fd;
  --color-blue-400: #60a5fa;
  --color-blue-500: #3b82f6;
  --color-blue-600: #2563eb;
  --color-blue-700: #1d4ed8;
  --color-blue-800: #1e40af;
  --color-blue-900: #1e3a8a;

  /* Red scale */
  --color-red-50: #fef2f2;
  --color-red-100: #fee2e2;
  --color-red-200: #fecaca;
  --color-red-300: #fca5a5;
  --color-red-400: #f87171;
  --color-red-500: #ef4444;
  --color-red-600: #dc2626;
  --color-red-700: #b91c1c;
  --color-red-800: #991b1b;
  --color-red-900: #7f1d1d;

  /* Green scale */
  --color-green-50: #f0fdf4;
  --color-green-100: #dcfce7;
  --color-green-200: #bbf7d0;
  --color-green-300: #86efac;
  --color-green-400: #4ade80;
  --color-green-500: #22c55e;
  --color-green-600: #16a34a;
  --color-green-700: #15803d;
  --color-green-800: #166534;
  --color-green-900: #14532d;

  /* Purple scale */
  --color-purple-50: #faf5ff;
  --color-purple-100: #f3e8ff;
  --color-purple-200: #e9d5ff;
  --color-purple-300: #d8b4fe;
  --color-purple-400: #c084fc;
  --color-purple-500: #a855f7;
  --color-purple-600: #9333ea;
  --color-purple-700: #7c3aed;
  --color-purple-800: #6b21a8;
  --color-purple-900: #581c87;

  /* Orange scale */
  --color-orange-50: #fff7ed;
  --color-orange-100: #ffedd5;
  --color-orange-200: #fed7aa;
  --color-orange-300: #fdba74;
  --color-orange-400: #fb923c;
  --color-orange-500: #f97316;
  --color-orange-600: #ea580c;
  --color-orange-700: #c2410c;
  --color-orange-800: #9a3412;
  --color-orange-900: #7c2d12;

  /* Semantic color mappings */
  --color-primary: var(--color-blue-600);
  --color-primary-hover: var(--color-blue-700);
  --color-primary-light: var(--color-blue-50);
  --color-secondary: var(--color-gray-600);
  --color-secondary-hover: var(--color-gray-700);
  --color-error: var(--color-red-600);
  --color-error-light: var(--color-red-50);
  --color-success: var(--color-green-600);
  --color-success-light: var(--color-green-50);
  --color-warning: var(--color-orange-600);
  --color-warning-light: var(--color-orange-50);
  --color-info: var(--color-blue-500);
  --color-info-light: var(--color-blue-50);

  /* Text colors on colored backgrounds */
  --color-on-primary: white;
  --color-on-success: white;
  --color-on-error: white;

  /* Surface and text colors */
  --color-background: var(--color-gray-50);
  --color-surface: var(--color-gray-100);
  --color-surface-hover: var(--color-gray-200);
  --color-text: var(--color-gray-900);
  --color-text-secondary: var(--color-gray-600);
  --color-text-muted: var(--color-gray-500);
  --color-border: var(--color-gray-300);
  --color-border-hover: var(--color-gray-400);
  --color-shadow: rgba(0, 0, 0, 0.1);
  --color-shadow-dark: rgba(0, 0, 0, 0.15);

  /* Component-specific semantic colors */
  --color-pto-vacation: var(--color-blue-500);
  --color-pto-sick: var(--color-red-500);
  --color-pto-bereavement: var(--color-purple-700);
  --color-pto-jury-duty: var(--color-green-600);
  --color-pto-holiday: var(--color-orange-500);

  /* Typography tokens */
  --font-family-base: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  --font-family-heading: var(--font-family-base);
  --font-size-base: 1rem;
  --font-size-sm: 0.875rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --line-height-base: 1.6;
  --line-height-tight: 1.4;

  /* Spacing tokens */
  --space-xs: 4px;
  --space-sm: 8px;
  --space-md: 16px;
  --space-lg: 24px;
  --space-xl: 32px;
  --space-2xl: 48px;

  /* Border tokens */
  --border-width: 1px;
  --border-width-thick: 2px;
  --border-radius: 4px;
  --border-radius-sm: 2px;
  --border-radius-lg: 8px;
  --border-radius-xl: 12px;
  --border-style-solid: solid;

  /* Shadow tokens */
  --shadow-sm: 0 1px 2px var(--color-shadow);
  --shadow-md: 0 2px 4px var(--color-shadow);
  --shadow-lg: 0 2px 10px var(--color-shadow);
  --shadow-xl: 0 4px 12px var(--color-shadow-dark);
}

/* Dark theme overrides */
@media (prefers-color-scheme: dark) {
  :root {
    /* Dark theme surface and text colors */
    --color-background: var(--color-gray-900);
    --color-surface: var(--color-gray-800);
    --color-surface-hover: var(--color-gray-700);
    --color-text: var(--color-gray-100);
    --color-text-secondary: var(--color-gray-400);
    --color-text-muted: var(--color-gray-500);
    --color-border: var(--color-gray-600);
    --color-border-hover: var(--color-gray-500);
    --color-shadow: rgba(0, 0, 0, 0.3);
    --color-shadow-dark: rgba(0, 0, 0, 0.5);

    /* Dark theme semantic adjustments */
    --color-primary: var(--color-blue-400);
    --color-primary-hover: var(--color-blue-300);
    --color-primary-light: var(--color-blue-900);
    --color-secondary: var(--color-gray-400);
    --color-secondary-hover: var(--color-gray-300);
    --color-error: var(--color-red-400);
    --color-error-light: var(--color-red-900);
    --color-success: var(--color-green-400);
    --color-success-light: var(--color-green-900);
    --color-warning: var(--color-orange-400);
    --color-warning-light: var(--color-orange-900);
    --color-info: var(--color-blue-400);
    --color-info-light: var(--color-blue-900);

    /* Dark theme PTO colors - slightly adjusted for better contrast */
    --color-pto-vacation: var(--color-blue-400);
    --color-pto-sick: var(--color-red-400);
    --color-pto-bereavement: var(--color-purple-400);
    --color-pto-jury-duty: var(--color-green-400);
    --color-pto-holiday: var(--color-orange-400);

    /* Dark theme typography tokens (same as light theme) */
    --font-family-base: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --font-family-heading: var(--font-family-base);
    --font-size-base: 1rem;
    --font-size-sm: 0.875rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    --line-height-base: 1.6;
    --line-height-tight: 1.4;

    /* Dark theme spacing tokens (same as light theme) */
    --space-xs: 4px;
    --space-sm: 8px;
    --space-md: 16px;
    --space-lg: 24px;
    --space-xl: 32px;
    --space-2xl: 48px;

    /* Dark theme border tokens (same as light theme) */
    --border-width: 1px;
    --border-width-thick: 2px;
    --border-radius: 4px;
    --border-radius-sm: 2px;
    --border-radius-lg: 8px;
    --border-radius-xl: 12px;
    --border-style-solid: solid;

    /* Dark theme shadow tokens */
    --shadow-sm: 0 1px 2px var(--color-shadow);
    --shadow-md: 0 2px 4px var(--color-shadow);
    --shadow-lg: 0 2px 10px var(--color-shadow);
    --shadow-xl: 0 4px 12px var(--color-shadow-dark);
  }
}

