/* Theme transition class for smooth theme switching */
.theme-transition * {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease !important;
}

body {
  font-family: var(--font-family-base);
  line-height: var(--line-height-base);
  color: var(--color-text);
  background-color: var(--color-background);
}

header {
  background-color: var(--color-surface);
  color: var(--color-text);
  padding: var(--space-lg);
  box-shadow: var(--shadow-md);
  border-bottom: var(--border-width) var(--border-style-solid) var(--color-border);
}

header h1 {
  margin-bottom: var(--space-sm);
}

nav {
  display: flex;
  gap: var(--space-lg);
}

/* Main content */
main {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-2xl);
}

/* Forms */
form {
  background: var(--color-surface);
  padding: var(--space-2xl);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--space-2xl);
  border: var(--border-width) var(--border-style-solid) var(--color-border);
}

form div {
  margin-bottom: var(--space-lg);
}

label {
  display: block;
  margin-bottom: var(--space-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text);
}

input,
select,
button {
  width: 100%;
  padding: var(--space-md);
  border: var(--border-width) var(--border-style-solid) var(--color-border);
  border-radius: var(--border-radius);
  font-size: var(--font-size-base);
  background-color: var(--color-background);
  color: var(--color-text);
  transition: border-color 0.3s, box-shadow 0.3s;
}

input:focus,
select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px var(--color-primary-light);
}

button {
  background-color: var(--color-primary);
  color: white;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
}

button:hover {
  background-color: var(--color-primary-hover);
}

button[type="button"] {
  background-color: var(--color-secondary);
  color: var(--color-background);
}

button[type="button"]:hover {
  background-color: var(--color-secondary-hover);
}

/* Dashboard */
#pto-status {
  background: var(--color-surface);
  padding: var(--space-2xl);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  margin-bottom: var(--space-2xl);
  border: var(--border-width) var(--border-style-solid) var(--color-border);
}

#pto-status h3 {
  margin-bottom: var(--space-lg);
  color: var(--color-text);
}

.pto-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--space-xl);
  margin-top: var(--space-lg);
}

.pto-section {
  background: var(--color-background);
  padding: var(--space-xl);
  border-radius: var(--border-radius);
  border-left: var(--border-width-thick) var(--border-style-solid) var(--color-primary);
  border: var(--border-width) var(--border-style-solid) var(--color-border);
}

.pto-section h4 {
  margin-bottom: var(--space-lg);
  color: var(--color-text);
  font-size: var(--font-size-lg);
}

.pto-section p {
  margin-bottom: var(--space-sm);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* Admin panel */
#admin-panel {
  background: var(--color-surface);
  padding: var(--space-2xl);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  border: var(--border-width) var(--border-style-solid) var(--color-border);
}

#admin-panel button {
  margin-right: var(--space-lg);
  margin-bottom: var(--space-lg);
  width: auto;
}

/* Utility classes */
.hidden {
  display: none;
}

.flex {
  display: flex;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

/* Responsive design */
@media (max-width: 768px) {
  main {
    padding: var(--space-lg);
  }

  form {
    padding: var(--space-lg);
  }

  nav {
    flex-direction: column;
  }
}

/* Notification/Toast System */
.notifications-container {
  position: fixed;
  top: var(--space-xl);
  right: var(--space-xl);
  z-index: 1000;
  max-width: 400px;
}

.notification-toast {
  background: var(--color-surface);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-xl);
  margin-bottom: var(--space-sm);
  padding: var(--space-lg);
  display: flex;
  align-items: flex-start;
  animation: slideIn 0.3s ease-out;
  border-left: var(--border-width-thick) var(--border-style-solid);
  opacity: 0;
  transform: translateX(100%);
  transition: all 0.3s ease;
  border: var(--border-width) var(--border-style-solid) var(--color-border);
}

.notification-toast.show {
  opacity: 1;
  transform: translateX(0);
}

.notification-toast.success {
  border-left-color: var(--color-success);
}

.notification-toast.error {
  border-left-color: var(--color-error);
}

.notification-toast.info {
  border-left-color: var(--color-info);
}

.notification-toast.warning {
  border-left-color: var(--color-warning);
}

.notification-content {
  flex: 1;
  margin-right: var(--space-md);
}

.notification-title {
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--space-xs);
  font-size: var(--font-size-sm);
  color: var(--color-text);
}

.notification-message {
  font-size: var(--font-size-sm);
  line-height: var(--line-height-tight);
  color: var(--color-text-secondary);
}

.notification-close {
  background: none;
  border: none;
  font-size: 18px;
  cursor: pointer;
  color: var(--color-text-muted);
  padding: 0;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.notification-close:hover {
  background-color: var(--color-surface-hover);
  color: var(--color-text);
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(100%);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.notification-toast.fade-out {
  opacity: 0;
  transform: translateX(100%);
}
