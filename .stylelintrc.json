{
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "import",
                    "media",
                    "supports",
                    "keyframes",
                    "mixin",
                    "include",
                    "extend"
                ]
            }
        ],
        "declaration-property-value-disallowed-list": {
            "color": [
                "/^#[0-9a-fA-F]{3,6}$/",
                "rgb\\(",
                "rgba\\(",
                "hsl\\(",
                "hsla\\("
            ],
            "background-color": [
                "/^#[0-9a-fA-F]{3,6}$/",
                "rgb\\(",
                "rgba\\(",
                "hsl\\(",
                "hsla\\("
            ],
            "border-color": [
                "/^#[0-9a-fA-F]{3,6}$/",
                "rgb\\(",
                "rgba\\(",
                "hsl\\(",
                "hsla\\("
            ]
        },
        "keyframes-name-pattern": "^[a-zA-Z]+(-[a-zA-Z0-9]+)*$",
        "media-feature-range-notation": "prefix"
    },
    "ignoreFiles": [
        "node_modules/**/*",
        "dist/**/*",
        "public/**/*",
        "client/tokens.css"
    ]
}