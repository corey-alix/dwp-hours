{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "scripts/**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}