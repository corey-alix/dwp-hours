{
    "name": "dwp-hours-tracker",
    "version": "1.0.0",
    "type": "module",
    "description": "A Node.js application for tracking monthly hours worked and managing Paid Time Off (PTO) for employees.",
    "main": "src/server.ts",
    "scripts": {
        "dev": "http-serve public -p 3000 -o",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:init": "echo 'Database initialized by server startup'",
        "test": "vitest --run",
        "test:e2e": "playwright test",
        "lint": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "keywords": [
        "pto",
        "time-tracking",
        "employee-management"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^2.2.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "reflect-metadata": "^0.2.2",
        "sql.js": "^1.13.0",
        "typeorm": "^0.3.28"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.2.0",
        "@types/sql.js": "^1.4.9",
        "http-serve": "^1.0.1",
        "playwright": "^1.58.1",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}