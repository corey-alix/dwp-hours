{
    "name": "dwp-hours-tracker",
    "version": "1.0.0",
    "type": "module",
    "description": "A Node.js application for tracking monthly hours worked and managing Paid Time Off (PTO) for employees.",
    "main": "src/server.mts",
    "scripts": {
        "dev": "npm run build:test-assets && http-serve public -p 3000 -o",
        "dev:kill": "lsof -ti:3000 | xargs kill -9 || true",
        "build": "npm-run-all -p build:client build:server",
        "build:client": "npm-run-all build:client:js build:client:assets",
        "build:client:js": "esbuild client/app.ts --bundle --outfile=public/app.js --format=esm --sourcemap",
        "build:client:assets": "cp client/index.html client/styles.css client/test.html public/",
        "build:test-assets": "cp -r client/components public/ && cp client/test.html public/",
        "build:server": "esbuild src/server.mts --bundle --outfile=dist/server.mjs --format=esm --platform=node --packages=external --sourcemap",
        "start": "nodemon",
        "start:prod": "node dist/server.mjs",
        "pm2:start": "pm2 start ecosystem.config.json",
        "pm2:stop": "pm2 stop ecosystem.config.json",
        "pm2:restart": "pm2 restart ecosystem.config.json",
        "pm2:delete": "pm2 delete ecosystem.config.json",
        "pm2:logs": "pm2 logs dwp-hours-tracker",
        "db:init": "echo 'Database initialized by server startup'",
        "seed": "node scripts/seed.js",
        "migrate": "node scripts/migrate.js",
        "test:unit": "vitest --run",
        "test:e2e": "playwright test",
        "test": "npm-run-all lint build seed test:unit test:e2e",
        "lint": "npm-run-all -p lint:server lint:client lint:test lint:e2e",
        "lint:server": "tsc --noEmit --project tsconfig-server.json",
        "lint:client": "tsc --noEmit --project tsconfig-client.json",
        "lint:test": "tsc --noEmit --project tsconfig-test.json",
        "lint:e2e": "tsc --noEmit --project tsconfig-e2e.json",
        "format": "prettier --write ."
    },
    "keywords": [
        "pto",
        "time-tracking",
        "employee-management"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^2.2.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "exceljs": "^4.4.0",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "nodemailer": "^6.10.1",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.2.2",
        "sql.js": "^1.13.0",
        "typeorm": "^0.3.28"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^25.2.0",
        "@types/nodemailer": "^7.0.9",
        "@types/sql.js": "^1.4.9",
        "@types/supertest": "^6.0.3",
        "esbuild": "^0.27.2",
        "http-serve": "^1.0.1",
        "jsdom": "^28.0.0",
        "nodemon": "^3.1.11",
        "playwright": "^1.58.1",
        "pm2": "^6.0.14",
        "prettier": "^3.8.1",
        "supertest": "^7.2.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}