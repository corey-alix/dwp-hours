{
    "name": "dwp-hours-tracker",
    "version": "1.0.0",
    "type": "module",
    "description": "A Node.js application for tracking monthly hours worked and managing Paid Time Off (PTO) for employees.",
    "main": "src/server.ts",
    "scripts": {
        "dev": "http-serve public -p 3000 -o",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:init": "echo 'Database initialized by server startup'",
        "test": "vitest",
        "test:e2e": "playwright test",
        "lint": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "keywords": [
        "pto",
        "time-tracking",
        "employee-management"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "sql.js": "^1.8.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/sql.js": "^1.4.9",
        "http-serve": "^1.0.1",
        "playwright": "^1.40.1",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vitest": "^1.0.4"
    }
}