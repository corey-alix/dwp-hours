{
    "name": "dwp-hours-tracker",
    "version": "1.0.0",
    "type": "module",
    "description": "A Node.js application for tracking monthly hours worked and managing Paid Time Off (PTO) for employees.",
    "main": "src/server.mts",
    "scripts": {
        "dev": "http-serve public -p 3000 -o",
        "build": "npm-run-all -p build:client build:server",
        "build:client": "esbuild public/app.ts --bundle --outfile=public/app.js --format=esm --sourcemap",
        "build:server": "esbuild src/server.mts --bundle --outfile=dist/server.mjs --format=esm --platform=node --packages=external --sourcemap",
        "start": "nodemon",
        "start:prod": "node dist/server.mjs",
        "db:init": "echo 'Database initialized by server startup'",
        "test:unit": "vitest --run",
        "test:e2e": "playwright test",
        "test": "npm-run-all lint build test:unit test:e2e",
        "lint": "npm-run-all -p lint:server lint:client lint:test",
        "lint:server": "tsc --noEmit --project tsconfig-server.json",
        "lint:client": "tsc --noEmit --project tsconfig-client.json",
        "lint:test": "tsc --noEmit --project tsconfig-test.json",
        "format": "prettier --write ."
    },
    "keywords": [
        "pto",
        "time-tracking",
        "employee-management"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^2.2.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.2.2",
        "sql.js": "^1.13.0",
        "typeorm": "^0.3.28"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^25.2.0",
        "@types/sql.js": "^1.4.9",
        "esbuild": "^0.27.2",
        "http-serve": "^1.0.1",
        "jsdom": "^28.0.0",
        "nodemon": "^3.1.11",
        "playwright": "^1.58.1",
        "prettier": "^3.8.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    }
}