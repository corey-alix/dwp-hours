{
  "name": "dwp-hours-tracker",
  "version": "1.0.0",
  "description": "A Node.js application for tracking monthly hours worked and managing Paid Time Off (PTO) for employees.",
  "main": "src/server.ts",
  "scripts": {
    "dev": "http-serve public -p 3000 -o",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:init": "node scripts/init-db.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "keywords": ["pto", "time-tracking", "employee-management"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "http-serve": "^1.0.1",
    "vitest": "^1.0.4",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1"
  }
}